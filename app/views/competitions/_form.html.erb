<%= default_form_for(@competition) do |f| %>
  <%= f.error_notification %>
	<h3>Basic Information</h3>
  <div class="form-inputs">
    <%= f.input :name %>
    <br>
    <%= f.input :sport %>
  </div>
	<div id="teams">
		<h3>Teams</h3>
		<%= f.simple_fields_for :teams_competitions do |teams_competition|%>
			<%= render 'teams_competition_fields', :f => teams_competition%>
			<br>
		<%end%>	
		<%if (controller.action_name != 'edit')%>
		<div class="links">
			
		<%= link_to_add_association 'Add Team', f, :teams_competitions, :class=>"btn btn-inv"%>
		</div>
		
		<%end%>
		
	</div>
	<br>
  </div>
  </div>
  
  <div class="white-b blue-t">
	<div class="container">
		<br>
		<div class="form-actions">
    <%= f.submit 'Save' , :class=>"btn btn-default btn-block" %>
    <br>
    </div>
  	</div>
  </div>
<% end %>
