<%= simple_form_for(@competition) do |f| %>
  <%= f.error_notification %>
  <div class="blue-b white-t">
	<div class="container">
		<h3>Basic Information</h3>
	  <div class="form-inputs">
	    <%= f.input :name %>
	    <br>
	    <%= f.input :sport %>
	  </div>
		<div id="teams">
			<h3>Teams</h3>
			<%= f.simple_fields_for :teams_competitions do |teams_competition|%>
				<%= render 'teams_competition_fields', :f => teams_competition%>
			<%end%>	
			
			<%if (controller.action_name != 'edit')%>
				<div class="links">
					<br>
					<%= link_to_add_association 'Add Team', f, :teams_competitions, :class=>"btn btn-inv btn-block"%>
				</div>
			<%end%>
		</div>
		<br>
	 </div>
	</div>
	<br>
	<div class="white-b blue-t">
	<div class="container"> 
		<div class="form-actions">
	    	<%= f.button :submit, :class=>"btn btn-default btn-block" %>
	    	<br>
	  	</div>
	</div>
	</div>
<% end %>
