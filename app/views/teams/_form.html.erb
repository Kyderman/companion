<%= horizontal_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :sport %>
  </div>
	<div id="users">
		<%= f.simple_fields_for :teams_users do |teams_user|%>
			<%= render 'teams_user_fields', :f => teams_user%>
		<%end%>	
		
		<div class="links">
			<%= link_to_add_association 'Add User', f, :teams_users, :class=>"btn btn-inv"%>
		</div>
		
	</div>
	
  </div>
  </div>
  <div class="white-b blue-t">
	<div class="container">
		<div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-inv" %>
    </div>
  	</div>
  </div>
<% end %>


